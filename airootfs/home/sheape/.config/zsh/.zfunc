# Comment this line if you don't want your ssh being active when you launch a terminal
keychain

# History cache
cache_path=$HOME/.cache/zsh/history
check_cache_dir(){
    [ -f "$cache_path" ] 2> /dev/null \
        || { mkdir $HOME/.cache; touch $cache_path };
}

lfcd() {
    tmp="$(mktemp)"
    lf -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
